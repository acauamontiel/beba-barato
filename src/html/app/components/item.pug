extends ../../layouts/component

block content
	.home__item.grid__item-sm--6.grid__item-md--4.grid__item-lg--3
		router-link.card.p--little(:class='{"card--success": (!difference)}', :to='"/edit/" + item.id')
			p {{item.volume}}ml
				span.home__item__quantity.text--tiny.text--muted(v-if='item.quantity > 1') x {{item.quantity}}
			p.text--minute.m--none.grid.grid--justify-between
				span {{item.price}}
				span.text--tiny.text--danger(v-if='difference') +{{difference}}%

			button.home__item__clear(@click.prevent='deleteItem(item.id)')
				+icon('clear')
