<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.acauamontiel.bebidaemconta" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bebida em Conta</name>
    <description>Calcule qual a bebida mais em conta</description>
    <author email="contato@acauamontiel.com.br" href="http://acauamontiel.com.br">Acau√£ Montiel</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <preference name="SplashMaintainAspectRatio" value="true"/>
        <preference name="SplashShowOnlyFirstTime" value="false"/>
        <preference name="SplashScreen" value="screen"/>

        <icon src="res/icon/android/icon.png"/>
        <splash src="res/screen/android/splash.png"/>
    </platform>
</widget>
